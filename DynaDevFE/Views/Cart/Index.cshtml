@model List<CartViewModel>

@{
    ViewData["Title"] = "Giỏ hàng";
}
<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet">

<div class="cart-container">
    <h2>GIỎ HÀNG (<span id="cart-count">@Model.Count</span> Sản Phẩm)</h2>
    <table>
        <thead>
            <tr>
                <th>Hình ảnh</th>
                <th>Tên sản phẩm</th>
                <th>Số lượng</th>
                <th>Đơn giá</th>
                <th>Thành tiền</th>
                <th>Hành động</th>
            </tr>
        </thead>
        <tbody id="cart-items">
            @foreach (var item in Model)
            {
                <tr data-id="@item.MaSP">
                    <td><img src="@item.Anh" width="50"></td>
                    <td>@item.TenSanPham</td>
                    <td>@item.SoLuong</td>
                    <td>@item.Gia.ToString("N0") đ</td>
                    <td>@(item.SoLuong * item.Gia) đ</td>
                    <td><button class="remove-btn" data-id="@item.MaSP"><i class="bi bi-trash3"></i></button></td>
                </tr>
            }
        </tbody>
    </table>
    <div class="total-price">Tổng cộng: <span id="total-price">@Model.Sum(x => x.Gia * x.SoLuong).ToString("N0")</span> đ</div>
    <button id="checkout-button">THANH TOÁN</button>
</div>

<script>
    document.addEventListener("DOMContentLoaded", function () {
        let cart = JSON.parse(localStorage.getItem("cart")) || [];

        // Kiểm tra dữ liệu cart trong localStorage có đúng không
        console.log("Cart from localStorage:", cart);

        // Cập nhật lại giỏ hàng nếu localStorage có dữ liệu
        if (cart.length > 0) {
            fetch('/Cart/UpdateCart', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json'
                },
                body: JSON.stringify(cart)
            }).then(response => response.json())
                .then(data => {
                    console.log("Cart updated:", data);
                    updateTotal(); // Cập nhật tổng tiền và số lượng
                });
        }

        // Thêm sự kiện xóa sản phẩm
        document.querySelectorAll(".remove-btn").forEach(button => {
            button.addEventListener("click", function () {
                removeItem(this.dataset.id);
            });
        });
    });

    function removeItem(maSP) {
        let cart = JSON.parse(localStorage.getItem("cart")) || [];
        let newCart = cart.filter(item => item.MaSP !== maSP);

        // Cập nhật lại localStorage
        localStorage.setItem("cart", JSON.stringify(newCart));

        // Gửi dữ liệu cập nhật lên server
        fetch('/Cart/UpdateCart', {
            method: 'POST',
            headers: {
                'Content-Type': 'application/json'
            },
            body: JSON.stringify(newCart)
        }).then(response => {
            if (response.ok) {
                console.log("Item removed from server:", maSP);

                // Xóa sản phẩm khỏi bảng hiển thị
                document.querySelector(`tr[data-id='${maSP}']`).remove();

                // Cập nhật lại tổng tiền và số lượng sản phẩm
                updateTotal();
            }
        });
    }

    function updateTotal() {
        let cart = JSON.parse(localStorage.getItem("cart")) || [];
        let totalPrice = cart.reduce((sum, item) => sum + (item.Gia * item.SoLuong), 0);

        // Cập nhật tổng tiền và số lượng
        document.getElementById("total-price").textContent = totalPrice.toLocaleString() + " đ";
        document.getElementById("cart-count").textContent = cart.length;

        console.log("Updated total price:", totalPrice);
    }

    document.getElementById("checkout-button").addEventListener("click", function () {
        let cart = JSON.parse(localStorage.getItem("cart")) || [];

        if (cart.length === 0) {
            alert("Giỏ hàng trống! Vui lòng thêm sản phẩm trước khi thanh toán.");
            return;
        }

        // Chuyển hướng đến trang nhập địa chỉ nhận hàng
        window.location.href = "/Checkout/ThongTinThanhToan";
    });
</script>

<style>
    /* Tổng thể giỏ hàng */
    .cart-container {
        max-width: 900px;
        margin: 40px auto;
        padding: 20px;
        background: #fff;
        border-radius: 12px;
        box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.1);
        font-family: 'Arial', sans-serif;
    }

        /* Tiêu đề giỏ hàng */
        .cart-container h2 {
            font-size: 24px;
            color: #333;
            font-weight: bold;
            padding-bottom: 10px;
            border-bottom: 2px solid #ddd;
        }

    /* Bảng sản phẩm */
    table {
        width: 100%;
        border-collapse: collapse;
        margin-top: 20px;
    }

    th, td {
        padding: 12px;
        text-align: center;
    }

    th {
        background: #f8f8f8;
        font-size: 16px;
        font-weight: bold;
        color: #333;
        border-bottom: 2px solid #ddd;
    }

    td {
        border-bottom: 1px solid #ddd;
        font-size: 14px;
    }

        /* Ảnh sản phẩm */
        td img {
            border-radius: 6px;
            box-shadow: 0px 2px 5px rgba(0, 0, 0, 0.1);
        }

    /* Nút xóa sản phẩm */
    .remove-btn {
        background: #e74c3c;
        color: white;
        border: none;
        padding: 8px 12px;
        border-radius: 5px;
        cursor: pointer;
        transition: background 0.3s;
    }

        .remove-btn:hover {
            background: #c0392b;
        }

    /* Tổng tiền */
    .total-price {
        text-align: right;
        font-size: 18px;
        font-weight: bold;
        margin-top: 20px;
        color: #27ae60;
    }

    /* Nút thanh toán */
    #checkout-button {
        display: block;
        width: 100%;
        padding: 12px;
        font-size: 16px;
        font-weight: bold;
        background: #27ae60;
        color: white;
        border: none;
        border-radius: 8px;
        cursor: pointer;
        transition: background 0.3s;
        margin-top: 15px;
    }

        #checkout-button:hover {
            background: #219150;
        }

</style>