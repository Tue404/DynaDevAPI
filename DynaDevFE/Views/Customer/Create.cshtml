@model DynaDevFE.Models.KhachHangViewModel
@using System.Text.Json;

@{
    ViewData["Title"] = "Thêm khách hàng mới";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<head>
    <!-- SweetAlert2 CSS -->
    <link href="https://cdn.jsdelivr.net/npm/sweetalert2@11/dist/sweetalert2.min.css" rel="stylesheet">
    <!-- SweetAlert2 JavaScript -->
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
</head>
<h2>Thêm khách hàng mới</h2>

<!-- Form Thêm Khách Hàng -->
<form asp-action="Create" method="post">
    <!-- Mã khách hàng (Tự động sinh, không cho nhập) -->
    <input asp-for="MaKH" type="hidden" class="form-control" value="AutoGenerated" />

    <!-- Tên khách hàng -->
    <div class="mb-3">
        <label asp-for="TenKH" class="form-label">Tên khách hàng</label>
        <input asp-for="TenKH" class="form-control" required />
        <span asp-validation-for="TenKH" class="text-danger"></span>
    </div>

    <!-- Email -->
    <div class="mb-3">
        <label asp-for="Email" class="form-label">Email</label>
        <input asp-for="Email" class="form-control" type="email" required />
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>

    <!-- Mật khẩu -->
    <div class="mb-3 position-relative">
        <label asp-for="MatKhau" class="form-label">Mật khẩu</label>
        <div class="input-group">
            <input asp-for="MatKhau" type="password" class="form-control" id="passwordInput" required />
            <button type="button" class="btn btn-outline-secondary" id="togglePassword" tabindex="-1">
                <i id="passwordIcon" class="bi bi-eye"></i>
            </button>
        </div>
        <span asp-validation-for="MatKhau" class="text-danger"></span>
    </div>

    <!-- Số điện thoại -->
    <div class="mb-3">
        <label asp-for="SDT" class="form-label">Số điện thoại</label>
        <input asp-for="SDT" class="form-control" required />
        <span asp-validation-for="SDT" class="text-danger"></span>
    </div>

    <!-- Địa chỉ -->
    <div class="mb-3">
        <label asp-for="DiaChi" class="form-label">Địa chỉ</label>
        <input asp-for="DiaChi" class="form-control" required />
        <span asp-validation-for="DiaChi" class="text-danger"></span>
    </div>

    <!-- Tình trạng -->
    <div class="mb-3">
        <label asp-for="TinhTrang" class="form-label">Tình trạng</label>
        <select asp-for="TinhTrang" class="form-select" required>
            <option value="Hoạt động">Hoạt động</option>
            <option value="Không hoạt động">Không hoạt động</option>
        </select>
        <span asp-validation-for="TinhTrang" class="text-danger"></span>
    </div>

    <!-- Nút hành động -->
    <button type="submit" class="btn btn-primary">Thêm khách hàng</button>
    <a asp-action="Index" class="btn btn-secondary">Quay lại</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

<!-- JavaScript: Hiển thị mật khẩu -->
<script>
    document.addEventListener('DOMContentLoaded', () => {
        const passwordInput = document.getElementById('passwordInput');
        const togglePassword = document.getElementById('togglePassword');
        const passwordIcon = document.getElementById('passwordIcon');

        togglePassword.addEventListener('click', () => {
            // Toggle type attribute giữa password và text
            const isPassword = passwordInput.getAttribute('type') === 'password';
            passwordInput.setAttribute('type', isPassword ? 'text' : 'password');

            // Toggle biểu tượng giữa eye và eye-slash
            passwordIcon.classList.toggle('bi-eye');
            passwordIcon.classList.toggle('bi-eye-slash');
        });
    });
    document.addEventListener('DOMContentLoaded', function () {
        // Hiển thị thông báo thành công
    @if (TempData["Success"] != null)
    {
        <text>
                Swal.fire({
                    icon: 'success',
                    title: 'Thành công!',
                    text: @Html.Raw(JsonSerializer.Serialize(TempData["Success"])),
                    showConfirmButton: false,
                    timer: 2000
                });
        </text>
    }

            // Hiển thị thông báo lỗi
    @if (TempData["Error"] != null)
    {
        <text>
                Swal.fire({
                    icon: 'error',
                    title: 'Lỗi!',
                    text: @Html.Raw(JsonSerializer.Serialize(TempData["Error"])),
                    showConfirmButton: true
                });
        </text>
    }
             });
</script>

<!-- Bootstrap Icons -->
<link href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-icons/1.10.5/font/bootstrap-icons.min.css" rel="stylesheet">

<style>
    #passwordIcon {
        font-size: 1.2rem; /* Kích thước biểu tượng */
        color: black; /* Màu đen cho biểu tượng */
    }
</style>

