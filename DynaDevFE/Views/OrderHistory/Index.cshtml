@model IEnumerable<OrderHistoryViewModel>

<h2>Lịch sử đơn hàng của bạn</h2>

@if (Model != null && Model.Any())
{
    <table class="table">
        <thead>
            <tr>
                <th>Ngày đặt hàng</th>
                <th>Tổng tiền</th>
                <th>Trạng thái đơn hàng</th>
                <th>Trạng thái thanh toán</th>
                <th>Địa chỉ giao hàng</th>
                <th>Chi tiết</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var order in Model)
            {
                <tr>
                    <td>@order.ThoiGianDatHang</td>
                    <td>@order.TongTien.ToString("N0") VNĐ</td>
                    <td>@order.OrderStatus</td>
                    <td>@order.PaymentStatus</td>
                    <td>@order.ShippingAddress</td>
                    <td><a href="@Url.Action("Details", "OrderHistory", new { id = order.MaDH })" class="btn btn-primary">Xem chi tiết</a></td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>Không có đơn hàng nào.</p>
}
