@{
    ViewData["Title"] = "Thanh toán thành công";
}

@{
    Layout = null;
}

<link rel="stylesheet" href="~/css/Success.css" />

<div class="success-container">
    <div class="success-icon"></div>
    <h2 class="fade-in">Thanh toán thành công</h2>
    <p class="fade-in">Cảm ơn bạn đã mua hàng! Đơn hàng của bạn đã được thanh toán thành công.</p>
    <a href="/" class="home-button">Quay về Trang chủ</a>
</div>

<script src="https://cdn.jsdelivr.net/npm/canvas-confetti@1.4.0/dist/confetti.browser.min.js"></script>
<script>
    // Hàm kích hoạt pháo giấy
    function launchConfetti() {
        confetti({
            particleCount: 100,
            spread: 70,
            origin: { y: 0.6 }
        });
    }

    // Khi trang tải xong, kích hoạt pháo giấy
    window.onload = function () {
        launchConfetti();
    }
</script>





